<script>
    function mostrarSenha1() {

        if (in_password1.type == "password") {
            password_image1.src = "assets/showPassword.png"
            in_password1.type = "text"
        } else {
            password_image1.src = "assets/hidePassword.png"
            in_password1.type = "password"
        }
    }

    function mostrarSenha2() {

        if (in_password2.type == "password") {
            password_image2.src = "assets/showPassword.png"
            in_password2.type = "text"
        } else {
            password_image2.src = "assets/hidePassword.png"
            in_password2.type = "password"
        }
    }

    function cadastrarUsuario() {
        alert(1)

        var nomeVar = in_nome.value
        var emailVar = in_email.value
        var senhaVar = in_password1.value

        

            fetch("/usuario/cadastrarUsuario", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    nomeServer: nomeVar,
                    emailServer: emailVar,
                    senhaServer: senhaVar
                })
            }).then((resposta) => {

                console.log("resposta: ", resposta);

                if (resposta.ok) {
                window.location = '/login'    
                } else {
                    throw ("Houve um erro ao tentar realizar o cadastro!");
                }

                
            }).catch((resposta) => {
                console.log(`#ERRO: ${resposta}`);
            });

            return false;
        }
    

</script>