            <div class="card">
                <h1 class="titulo">Registro</h1>

                <div class="inputs-login">
                    <input type="text" placeholder="Insira o ID da empresa" id="in_nome">
                    <input type="text" placeholder="Insira seu e-mail" id="in_email">

                    <input id="in_password1" type="password" placeholder="Insira sua senha">
                    <div class="checkbox" id="checkbox1">
                        <img class="password_image" id="password_image1" src="assets/hidePassword.png"
                            style="height: 10px;" onclick="mostrarSenha1()">
                    </div>

                    <input id="in_password2" type="password" placeholder="Confirme sua senha">
                    <div class="checkbox" id="checkbox2">
                        <img class="password_image" id="password_image2" src="assets/hidePassword.png"
                            style="height: 10px;" onclick="mostrarSenha2()">
                    </div>

                </div>

                <div class="buttons-login">
                    <button class="btn btnGeral" onclick="cadastrarUsuario()">Criar conta</button>
                    <a href="/login" class="btn2 btnGeral">JÃ¡ possui uma conta? Login</a>
                    <a class="hrefvoltar" href="/cadastro1">Voltar</a>
                </div>

            </div>

        </div>
